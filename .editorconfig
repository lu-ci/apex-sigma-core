# for the sake of sanity

# topmost editorconfig file
root = true

# force UTF8, Unix newlines and space for indentation
[*]
charset = utf-8
end_of_line = lf
indent_style = space

[*.py]
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_size = 2
tab_width = 2
